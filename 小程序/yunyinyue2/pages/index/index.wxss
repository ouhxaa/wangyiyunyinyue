/* 轮播图区域 */
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}
/* 五个图标导航的区域 */
.navContainer{
  display: flex;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
/* 注意权重 */
.navItem .iconfont {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: rgb(240, 19, 19);
  font-size: 50rpx;
  color: #fff;
  margin: 20rpx 0;
}
.navItem text{
  font-size: 26rpx;
}
/* 推荐歌曲 */
.recommendContainer {
  padding: 20rpx;
}
  /* 推荐内容区 */
  .recommendScroll{
  /* 标签属性上也声明才能实现flex 不然这组件不承认 */
    display: flex;
    height: 280rpx;
  }
  .scrollItem{
    width: 200rpx;
    margin-left: 20rpx;
  }
  .scrollItem image{
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
  }
  .scrollItem text{
    font-size: 26rpx;
    /* 单行文本溢出隐藏 省略号代替 */
    /* display: block;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis; */
    /* 多行文本溢出隐藏 省略号代替 */
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-box-orient: vertical;/* 设置对其模式 */
    -webkit-line-clamp: 2;/* 设置多行的行数 */
  }
/* 排行榜 */
.topListSwiper{
  height: 500rpx;
}
.topList{
  padding: 20rpx;
}
.swiperItem{
  width: 96%;
  background-color: #fbfbfb;
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem{
  /* 当为一个元素设置为flex 其子元素会自动成为block元素 */
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image{
  width: 100rpx ;
  height: 100rpx;
  border-radius: 6rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}